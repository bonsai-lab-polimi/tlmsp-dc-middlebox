{
  "$schema": "http://json-schema.org/schema#",
  "self": {
    "vendor": "com.nava",
    "name": "product/create",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "brand": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "price": {
      "type": "string",
      "format": "\\d+(\\.\\d\\d)"
    }
  },
  "required": [
    "id",
    "brand",
    "name",
    "description",
    "category"
  ],
  "additionalProperties": true
}
